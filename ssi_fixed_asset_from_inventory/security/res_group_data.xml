<odoo>
<record id="fixed_asset_from_inventory_type_configurator_group" model="res.groups">
    <field name="name">Fixed Asset From Inventory Type</field>
    <field
            name="category_id"
            ref="ssi_financial_accounting.financial_accounting_configurator_module_category"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

<!-- Workflow -->
<record id="fixed_asset_from_inventory_viewer_group" model="res.groups">
    <field name="name">Viewer</field>
    <field
            name="category_id"
            ref="fixed_asset_from_inventory_workflow_module_category"
        />
</record>

<record id="fixed_asset_from_inventory_user_group" model="res.groups">
    <field name="name">User</field>
    <field
            name="category_id"
            ref="fixed_asset_from_inventory_workflow_module_category"
        />
    <field
            name="implied_ids"
            eval="[(4, ref('fixed_asset_from_inventory_viewer_group'))]"
        />
</record>

<record id="fixed_asset_from_inventory_validator_group" model="res.groups">
    <field name="name">Validator</field>
    <field
            name="category_id"
            ref="fixed_asset_from_inventory_workflow_module_category"
        />
    <field
            name="implied_ids"
            eval="[(4, ref('fixed_asset_from_inventory_user_group'))]"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

