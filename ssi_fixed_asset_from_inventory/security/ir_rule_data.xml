<odoo>
<record id="fixed_asset_from_inventory_internal_user_rule" model="ir.rule">
    <field name="name">Fixed Asset From Inventory - Responsible to own data</field>
    <field name="model_id" ref="model_fixed_asset_from_inventory" />
    <field name="groups" eval="[(4, ref('base.group_user'))]" />
    <field name="domain_force">[
      ('user_id','=',user.id),
    ]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="fixed_asset_from_inventory_company_rule" model="ir.rule">
    <field name="name">Fixed Asset From Inventory - Responsible to company data</field>
    <field name="model_id" ref="model_fixed_asset_from_inventory" />
    <field name="groups" eval="[(4, ref('fixed_asset_in_progres_company_group'))]" />
    <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="fixed_asset_from_inventory_company_child_rule" model="ir.rule">
    <field
            name="name"
        >Fixed Asset From Inventory - Responsible to company and all child companies data</field>
    <field name="model_id" ref="model_fixed_asset_from_inventory" />
    <field
            name="groups"
            eval="[(4, ref('fixed_asset_in_progres_company_child_group'))]"
        />
    <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="fixed_asset_from_inventory_all_rule" model="ir.rule">
    <field name="name">Fixed Asset From Inventory - Responsible to all data</field>
    <field name="model_id" ref="model_fixed_asset_from_inventory" />
    <field name="groups" eval="[(4, ref('fixed_asset_in_progres_all_group'))]" />
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
