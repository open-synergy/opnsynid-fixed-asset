<odoo>
    <data noupdate="0">
        <record
            id="fixed_asset_improvement_policy_template"
            model="policy.template"
        >
            <field name="name">Standard</field>
            <field
                name="model_id"
                ref="model_fixed_asset_improvement"
            />
            <field
                name="state_field_id"
                search="[('model_id.model','=','fixed_asset_improvement'),('name','=','state')]"
            />
            <field name="sequence" eval="100" />
            <field name="python_code">result=True</field>
        </record>

        <!-- confirm -->
        <record
            id="fixed_asset_improvement_policy_template_detail_confirm"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="fixed_asset_improvement_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset_improvement'),('name','=','confirm_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset_improvement'),('value','=','draft')]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('fixed_asset_improvement_user_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>

        <!-- approve -->
        <record
            id="fixed_asset_improvement_policy_template_detail_approve"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="fixed_asset_improvement_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset_improvement'),('name','=','approve_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset_improvement'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="0" />
            <field name="restrict_additional" eval="1" />
            <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
        </record>

        <!-- reject -->
        <record
            id="fixed_asset_improvement_policy_template_detail_reject"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="fixed_asset_improvement_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset_improvement'),('name','=','reject_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset_improvement'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="0" />
            <field name="restrict_additional" eval="1" />
            <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
        </record>

        <!-- cancel -->
        <record
            id="fixed_asset_improvement_policy_template_detail_cancel"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="fixed_asset_improvement_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset_improvement'),('name','=','cancel_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset_improvement'),('value','in',['draft'])]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('fixed_asset_improvement_validator_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>

        <!-- restart -->
        <record
            id="fixed_asset_improvement_policy_template_detail_restart"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="fixed_asset_improvement_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset_improvement'),('name','=','restart_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset_improvement'),('value','in',['cancel','reject'])]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('fixed_asset_improvement_validator_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>
    </data>
</odoo>
