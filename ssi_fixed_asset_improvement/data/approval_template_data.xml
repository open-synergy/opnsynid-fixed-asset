<odoo>
    <data noupdate="0">
        <record
            id="fixed_asset_improvement_approval_template"
            model="approval.template"
        >
            <field name="name">Standard</field>
            <field
                name="model_id"
                ref="model_fixed_asset_improvement"
            />
            <field name="sequence" eval="100" />
            <field name="computation_method">use_python</field>
            <field name="python_code">result = True</field>
            <field name="validate_sequence" eval="1" />
        </record>
        <record
            id="fixed_asset_improvement_approval_template_detail"
            model="approval.template_detail"
        >
            <field
                name="template_id"
                ref="fixed_asset_improvement_approval_template"
            />
            <field name="approver_selection_method">use_group</field>
            <field
                name="approver_group_ids"
                eval="[(6,0,[ref('fixed_asset_improvement_validator_group')])]"
            />
        </record>
    </data>
</odoo>
