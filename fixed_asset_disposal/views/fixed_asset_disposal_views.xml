<odoo>
<record id="fixed_asset_disposal_view_form" model="ir.ui.view">
    <field name="name">fixed.asset.disposal.form</field>
    <field name="model">fixed.asset.disposal</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                        attrs="{'invisible':[('confirm_ok','=',False)]}"
                    />
                <button
                        name="action_approve_approval"
                        string="Approve"
                        attrs="{'invisible': ['|', '|', '|',
                            ('approve_ok','=',False),
                            ('approved', '=', True),
                            ('rejected', '=', True),
                            ('approval_ids', '=', [])]}"
                        type="object"
                        class="oe_highlight"
                        confirm="Approve data. Are you sure?"
                    />
                <button
                        name="action_reject_approval"
                        string="Reject"
                        attrs="{'invisible': ['|', '|', '|',
                            ('reject_ok','=',False),
                            ('approved', '=', True),
                            ('rejected', '=', True),
                            ('approval_ids', '=', [])]}"
                        type="object"
                        confirm="Reject data. Are you sure?"
                    />
                <button
                        name="action_valid"
                        type="object"
                        string="Valid"
                        class="oe_highlight"
                        attrs="{'invisible':[('valid_ok','=',False)]}"
                    />
                <button
                        name="action_cancel"
                        type="object"
                        string="Cancel"
                        attrs="{'invisible':[('cancel_ok','=',False)]}"
                    />
                <button
                        name="action_restart"
                        type="object"
                        string="Restart"
                        attrs="{'invisible':[('restart_ok','=',False)]}"
                    />
                <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirm,open,valid"
                    />
            </header>
            <field name="need_validation" invisible="1" />
            <field name="approved" invisible="1" />
            <field name="rejected" invisible="1" />
            <sheet>
                <div
                        class="oe_right oe_button_box"
                        style="width: 300px;"
                        name="buttons"
                    >
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="date_disposition" />
                        <field name="type_id" />
                        <field name="generate_accounting_entry" />
                    </group>
                    <group name="group_1_2" colspan="1" col="2">
                        <field
                                name="asset_id"
                                domain="[('company_id','=',company_id),('type','=','normal')]"
                            />
                        <field name="currency_id" invisible="0" />
                        <field
                                name="disposition_price"
                                widget="monetary"
                                options="{'currency_field':'currency_id'}"
                            />
                        <field
                                name="acquisition_price"
                                widget="monetary"
                                options="{'currency_field':'currency_id'}"
                                force_save="1"
                            />
                        <field
                                name="depreciated_amount"
                                widget="monetary"
                                options="{'currency_field':'currency_id'}"
                                force_save="1"
                            />
                        <field
                                name="gain_loss_amount"
                                widget="monetary"
                                options="{'currency_field':'currency_id'}"
                                force_save="1"
                            />
                    </group>
                </group>
                <notebook>
                    <page
                            name="acc_config"
                            string="Accounting Configuration"
                            groups="fixed_asset_disposal.group_technical_disposal_accounting"
                        >
                        <group name="acc_config_1" colspan="4" col="2">
                            <group
                                    name="acc_config_1_1"
                                    colspan="1"
                                    col="2"
                                    invisible="1"
                                >
                                <field name="exchange_acc_move_creation" />
                                <field name="disposal_acc_move_creation" />
                                <field name="gain_acc_move_creation" />
                            </group>
                            <group name="acc_config_1_2" colspan="1" col="2">
                                <field name="asset_account_id" />
                                <field name="exchange_account_id" />
                                <field name="accumulated_depreciation_account_id" />
                                <field name="gain_account_id" />
                                <field name="loss_account_id" />
                            </group>
                            <group name="acc_config_1_2" colspan="1" col="2">
                                <field name="disposal_journal_id" />
                            </group>
                        </group>
                    </page>
                    <page
                            name="acc_entry"
                            string="Accounting Entry"
                            groups="fixed_asset_disposal.group_technical_disposal_helper"
                        >
                        <group name="acc_entry_1" colspan="4" col="2">
                            <field name="exchange_acc_move_id" invisible="1" />
                            <field name="disposal_acc_move_id" />
                            <field name="gain_acc_move_id" invisible="1" />
                            <field name="depreciation_line_id" />
                        </group>
                    </page>
                    <page name="policy" string="Policy" groups="base.group_system">
                        <group name="group_policy_1" colspan="4" col="2">
                            <field name="policy_template_id" />
                            <button
                                    name="action_reload_policy_template"
                                    type="object"
                                    string="Reload Template Policy"
                                    icon="fa-refresh"
                                    class="oe_highlight"
                                />
                            <field name="confirm_ok" />
                            <field name="approve_ok" />
                            <field name="reject_ok" />
                            <field name="valid_ok" />
                            <field name="cancel_ok" />
                            <field name="restart_ok" />
                            <field name="restart_validation_ok" />
                        </group>
                    </page>
                    <page string="Approvals" name="multiple_approval">
                        <group>
                            <field name="approval_template_id" />
                            <field
                                    name="active_approver_partner_ids"
                                    widget="many2many_tags"
                                />
                        </group>
                        <field
                                name="approval_ids"
                                readonly="1"
                                force_save="1"
                                nolabel="1"
                            />
                    </page>
                    <page name="note" string="Note">
                        <field name="note" colspan="4" nolabel="1" />
                    </page>
                    <page
                            name="page_state_change_history"
                            string="States Change History"
                        >
                        <field name="state_change_history_ids" nolabel="1" />
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers" />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </form>
    </field>
</record>

<record id="fixed_asset_disposal_view_tree" model="ir.ui.view">
    <field name="name">fixed.asset.disposal.tree</field>
    <field name="model">fixed.asset.disposal</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="company_id" groups="base.group_multi_company" />
            <field name="date_disposition" />
            <field name="type_id" />
            <field name="asset_id" />
            <field name="disposition_price" />
            <field name="acquisition_price" />
            <field name="depreciated_amount" />
            <field name="gain_loss_amount" />
            <field name="state" />
        </tree>
    </field>
</record>

<record id="fixed_asset_disposal_view_search" model="ir.ui.view">
    <field name="name">fixed.asset.disposal.search</field>
    <field name="model">fixed.asset.disposal</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="company_id" groups="base.group_multi_company" />
            <field name="asset_id" />
            <field name="currency_id" />
            <field name="type_id" />
            <field
                    name="asset_account_id"
                    groups="fixed_asset_disposal.group_technical_disposal_accounting"
                />
            <field
                    name="exchange_account_id"
                    groups="fixed_asset_disposal.group_technical_disposal_accounting"
                />
            <field
                    name="accumulated_depreciation_account_id"
                    groups="fixed_asset_disposal.group_technical_disposal_accounting"
                />
            <field
                    name="gain_account_id"
                    groups="fixed_asset_disposal.group_technical_disposal_accounting"
                />
            <field
                    name="loss_account_id"
                    groups="fixed_asset_disposal.group_technical_disposal_accounting"
                />
            <field
                    name="disposal_journal_id"
                    groups="fixed_asset_disposal.group_technical_disposal_accounting"
                />
            <field name="state" />
            <group name="group_state" string="State">
                <filter
                        name="filter_draft"
                        string="Draft"
                        domain="[('state','=','draft')]"
                    />
                <filter
                        name="filter_confirm"
                        string="Waiting for Approval"
                        domain="[('state','=','confirm')]"
                    />
                <filter
                        name="filter_open"
                        string="On Progress"
                        domain="[('state','=','open')]"
                    />
                <filter
                        name="filter_valid"
                        string="Valid"
                        domain="[('state','=','valid')]"
                    />
                <filter
                        name="filter_cancel"
                        string="Cancel"
                        domain="[('state','=','cancel')]"
                    />
            </group>
            <group name="group_by" string="Group By..">
                <filter
                        name="grp_asset"
                        string="Asset"
                        context="{'group_by':'asset_id'}"
                    />
                <filter
                        name="grp_type_id"
                        string="Type"
                        context="{'group_by':'type_id'}"
                    />
                <filter
                        name="grp_asset_account"
                        string="Asset Account"
                        context="{'group_by':'asset_account_id'}"
                        groups="fixed_asset_disposal.group_technical_disposal_accounting"
                    />
                <filter
                        name="grp_exchange_account"
                        string="Exchange Account"
                        context="{'group_by':'exchange_account_id'}"
                        groups="fixed_asset_disposal.group_technical_disposal_accounting"
                    />
                <filter
                        name="grp_accumulated_depreciation_account"
                        string="Accumulated Depreciation Account"
                        context="{'group_by':'accumulated_depreciation_account_id'}"
                        groups="fixed_asset_disposal.group_technical_disposal_accounting"
                    />
                <filter
                        name="grp_gain_account"
                        string="Gain Account"
                        context="{'group_by':'gain_account_id'}"
                        groups="fixed_asset_disposal.group_technical_disposal_accounting"
                    />
                <filter
                        name="grp_loss_account"
                        string="Loss Account"
                        context="{'group_by':'loss_account_id'}"
                        groups="fixed_asset_disposal.group_technical_disposal_accounting"
                    />
                <filter
                        name="grp_disposal_journal"
                        string="Disposal Journal"
                        context="{'group_by':'disposal_journal_id'}"
                        groups="fixed_asset_disposal.group_technical_disposal_accounting"
                    />
                <filter
                        name="grp_date_year"
                        string="Date by Year"
                        context="{'group_by':'date_disposition:year'}"
                    />
                <filter
                        name="grp_date_month"
                        string="Date by Month"
                        context="{'group_by':'date_disposition:month'}"
                    />
                <filter
                        name="grp_date_week"
                        string="Date by Week"
                        context="{'group_by':'date_disposition:week'}"
                    />
                <filter
                        name="grp_date_day"
                        string="Date by Day"
                        context="{'group_by':'date_disposition:day'}"
                    />
                <filter
                        name="grp_state"
                        string="State"
                        context="{'group_by':'state'}"
                    />
            </group>
        </search>
    </field>
</record>

<record id="fixed_asset_disposal_action" model="ir.actions.act_window">
    <field name="name">Disposal Assets</field>
    <field name="res_model">fixed.asset.disposal</field>
    <field name="view_type">form</field>
    <field name="view_id" ref="fixed_asset_disposal_view_tree" />
    <field name="search_view_id" ref="fixed_asset_disposal_view_search" />
</record>

<menuitem
        id="menu_fixed_asset_disposal"
        parent="fixed_asset.menu_finance_assets"
        action="fixed_asset_disposal_action"
    />
</odoo>
