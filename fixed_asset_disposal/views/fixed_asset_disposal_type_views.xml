<odoo>
<record id="fixed_asset_disposal_type_view_tree" model="ir.ui.view">
    <field name="name">fixed.asset.disposal.type.tree</field>
    <field name="model">fixed.asset.disposal_type</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="code" />
        </tree>
    </field>
</record>

<record id="fixed_asset_disposal_type_view_form" model="ir.ui.view">
    <field name="name">fixed.asset.disposal.type.form</field>
    <field name="model">fixed.asset.disposal_type</field>
    <field name="arch" type="xml">
        <form>
            <group name="top" colspan="4" col="2">
                <field name="name" />
                <field name="code" />
                <field name="active" />
            </group>
            <notebook>
                <page name="general" string="General Configuration">
                    <group name="general_1" colspan="4" col="2">
                        <group name="general_1_1" colspan="1" col="2">
                            <field name="sequence_id" />
                            <field name="set_disposition_price" />
                        </group>
                        <group name="general_1_2" colspan="1" col="2">
                        </group>
                    </group>
                </page>
                <page name="accounting" string="Accounting Configuration">
                    <group name="accounting_1" colspan="4" col="2">
                        <group name="accounting_1_1" colspan="1" col="2">
                            <field name="disposal_journal_id" />
                        </group>
                        <group name="accounting_1_2" colspan="1" col="2">
                            <field name="exchange_account_id" />
                            <field name="gain_account_id" />
                            <field name="loss_account_id" />
                        </group>
                    </group>
                </page>
                <page name="note" string="Note">
                    <field name="note" nolabel="1" />
                </page>
            </notebook>
            <div class="open_chatter">
                <field
                        name="message_follower_ids"
                        widget="mail_followers"
                        group="base.group_user"
                    />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </form>
    </field>
</record>

<record id="fixed_asset_disposal_type_action" model="ir.actions.act_window">
    <field name="name">Fixed Asset Disposal Types</field>
    <field name="res_model">fixed.asset.disposal_type</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="fixed_asset_disposal_type_menu"
        name="Disposal Types"
        parent="fixed_asset.menu_finance_config_assets"
        action="fixed_asset_disposal_type_action"
        sequence="1"
    />
</odoo>
