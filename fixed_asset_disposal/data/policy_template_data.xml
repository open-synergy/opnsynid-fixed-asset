<odoo>
<data noupdate="1">
<record id="policy_template_fixed_asset_disposal" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="fixed_asset_disposal.model_fixed_asset_disposal" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">result=True</field>
</record>
<record
            id="policy_template_detail_fixed_asset_disposal_confirm"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_fixed_asset_disposal" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record
            id="policy_template_detail_fixed_asset_disposal_valid"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_fixed_asset_disposal" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','valid_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">open</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record
            id="policy_template_detail_fixed_asset_disposal_cancel"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_fixed_asset_disposal" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft,confirm,open,valid</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record
            id="policy_template_detail_fixed_asset_disposal_restart"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_fixed_asset_disposal" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','restart_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">cancel,reject</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record
            id="policy_template_detail_fixed_asset_disposal_restart_validation"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_fixed_asset_disposal" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','restart_validation_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">reject</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record
            id="policy_template_detail_fixed_asset_disposal_approve"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_fixed_asset_disposal" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','approve_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record
            id="policy_template_detail_fixed_asset_disposal_reject"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_fixed_asset_disposal" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.disposal'),('name','=','reject_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>
</data>
</odoo>
