<odoo>
<!-- Workflow -->
<record id="fixed_asset_disposal_viewer_group" model="res.groups">
    <field name="name">Viewer</field>
    <field name="category_id" ref="fixed_asset_disposal_workflow_module_category" />
</record>

<record id="fixed_asset_disposal_user_group" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="fixed_asset_disposal_workflow_module_category" />
    <field name="implied_ids" eval="[(4, ref('fixed_asset_disposal_viewer_group'))]" />
</record>

<record id="fixed_asset_disposal_validator_group" model="res.groups">
    <field name="name">Validator</field>
    <field name="category_id" ref="fixed_asset_disposal_workflow_module_category" />
    <field name="implied_ids" eval="[(4, ref('fixed_asset_disposal_user_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

<!-- Data Ownership -->
<record id="fixed_asset_disposal_company_group" model="res.groups">
    <field name="name">Company</field>
    <field
            name="category_id"
            ref="fixed_asset_disposal_data_ownership_module_category"
        />
</record>

<record id="fixed_asset_disposal_company_child_group" model="res.groups">
    <field name="name">Company and All Child Companies</field>
    <field
            name="category_id"
            ref="fixed_asset_disposal_data_ownership_module_category"
        />
    <field name="implied_ids" eval="[(4, ref('fixed_asset_disposal_company_group'))]" />
</record>

<record id="fixed_asset_disposal_all_group" model="res.groups">
    <field name="name">All</field>
    <field
            name="category_id"
            ref="fixed_asset_disposal_data_ownership_module_category"
        />
    <field
            name="implied_ids"
            eval="[(4, ref('fixed_asset_disposal_company_child_group'))]"
        />
</record>

<!-- Configurator -->
<record id="fixed_asset_disposal_type_configurator_group" model="res.groups">
    <field name="name">Fixed Asset Disposal Type</field>
    <field
            name="category_id"
            ref="ssi_financial_accounting.financial_accounting_configurator_module_category"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
