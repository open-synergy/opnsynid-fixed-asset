    <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset.disposal'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset.disposal'),('value','in',['draft','confirm','open','done'])]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_fixed_asset_disposal.fixed_asset_disposal_validator_group')])]"
