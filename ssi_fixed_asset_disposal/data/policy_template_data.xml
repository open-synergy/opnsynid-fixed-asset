<odoo>
<data noupdate="1">
<record id="policy_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="ssi_fixed_asset_disposal.model_fixed_asset_disposal" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','fixed_asset.disposal'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Confirm -->
<record id="policy_template_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset.disposal'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset.disposal'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_fixed_asset_disposal.fixed_asset_disposal_user_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

<!-- Restart Approval -->
<record id="policy_template_restart_approval" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed_asset.disposal'),('name','=','restart_approval_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','fixed_asset.disposal'),('value','=','confirm')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_fixed_asset_disposal.fixed_asset_disposal_validator_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>

