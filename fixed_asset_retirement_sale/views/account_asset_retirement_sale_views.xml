    <field name="arch" type="xml">
        <data/>
    </field>
</record>

<record id="account_asset_retirement_sale_view_tree" model="ir.ui.view">
    <field name="name">account.asset_retirement_sale tree</field>
    <field name="model">account.asset_retirement_sale</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="fixed_asset_retirement_common.account_asset_retirement_common_view_tree"/>
    <field name="arch" type="xml">
        <data/>
