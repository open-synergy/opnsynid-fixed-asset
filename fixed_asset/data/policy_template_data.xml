<odoo>
<data noupdate="1">
<record id="policy_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="fixed_asset.model_fixed_asset_asset" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','fixed.asset.asset'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">result=True</field>
</record>
<record id="policy_template_detail1" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.asset'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record id="policy_template_detail3" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.asset'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">draft,confirm,open</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record id="policy_template_detail4" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.asset'),('name','=','restart_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">cancel,reject</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record id="policy_template_detail6" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.asset'),('name','=','approve_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="policy_template_detail7" model="policy.template_detail">
    <field name="template_id" ref="policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','fixed.asset.asset'),('name','=','reject_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>
</data>
</odoo>
