<odoo>
    <data>
        <record id="fixed_asset_config_setting_view_form" model="ir.ui.view">
            <field name="name">fixed.asset.config_setting form</field>
            <field name="model">fixed.asset.config_setting</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form class="oe_form_configuration">
                    <header>
                        <button
                            name="execute"
                            string="Apply"
                            type="object"
                            class="oe_highlight"
                        />
                        or
                        <button
                            name="cancel"
                            string="Cancel"
                            type="object"
                            class="oe_link"
                        />
                    </header>
                    <field name="company_id" invisible="1" />
                    <h2>Feature &amp; Integration</h2>
                    <div
                        class="row mt16 o_settings_container"
                        name="div_feature_integration"
                    >
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            name="div_feature_setting"
                        >
                            <div
                                class="o_setting_left_pane"
                                name="div_feature_setting_left"
                            />
                            <div
                                class="o_setting_right_pane"
                                name="div_feature_setting_right"
                            >
                                <div class="text-muted">
                                    Digitalize your scanned or PDF vendor bills with OCR and Artificial Intelligence
                                </div>
                            </div>
                        </div>
                        <div
                            class="col-12 col-lg-6 o_setting_box"
                            name="div_integration_setting"
                        >
                            <div
                                class="o_setting_left_pane"
                                name="div_integration_setting_left"
                            />
                            <div
                                class="o_setting_right_pane"
                                name="div_integration_setting_right"
                            >
                                <div class="text-muted">
                                    Digitalize your scanned or PDF vendor bills with OCR and Artificial Intelligence
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="fixed_asset_config_setting_action" model="ir.actions.act_window">
            <field name="name">Asset Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fixed.asset.config_setting</field>
            <field name="target">inline</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem
            id="fixed_asset_config_setting_menu"
            name="Configuration"
            parent="fixed_asset.menu_finance_config_assets"
            action="fixed_asset_config_setting_action"
            sequence="0"
        />
    </data>
</odoo>
